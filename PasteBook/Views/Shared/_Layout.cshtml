<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | PasteBook</title>
    <link rel="icon" href="~/Content/Images/pastebookIcon.ico" type="image/x-icon"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "PasteBookAccount")'>
                    <img id="imgLogo" src='@Url.Content("~/Content/Images/pastebookLogo.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @{
                    if (Session["User"] != null)
                    {
                        <div class="nav navbar-nav navbar-right dropdown">
                            <a href="" data-toggle="dropdown" class="dropdown-toggle">Hello, @Session["User"]<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Profile","UserProfile", "PasteBookApp", new { userID = Session["User"]}, null)</li>
                                <li><a href="#">Settings</a></li>
                                <li><a href="@Url.Action("Logout", "PasteBookAccount")">Logout</a></li>
                            </ul>
                        </div>
                    }

                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Home", "Index", "PasteBookAccount")</li>
                            <li>@Html.ActionLink("Login", "Login", "PasteBookAccount")</li>
                            <li>@Html.ActionLink("Register", "Register", "PasteBookAccount")</li>
                        </ul>
                    }
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PasteBook | Developed by Arvie Limbo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
